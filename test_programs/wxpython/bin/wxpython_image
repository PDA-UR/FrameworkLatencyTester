#!/usr/bin/python3

# this program is based on tutorials by ZetCode
# https://zetcode.com/wxpython

import wx

class TestApp(wx.Frame):
    def __init__(self, *args, **kw):
        super(TestApp, self).__init__(*args, **kw)

        self.Bind(wx.EVT_PAINT, self.OnPaint)
        self.Bind(wx.EVT_LEFT_DOWN, self.OnClick)
        self.Bind(wx.EVT_LEFT_UP, self.OnRelease)

        self.color = '#000000'

        self.img = wx.Bitmap('noise.png')
        #self.panel = Panel(self, -1)
        #self.img = wx.Image(opj('noise.png'), wx.BITMAP_TYPE_PNG).ConvertToBitmap()
        #wx.StaticBitmap(self.panel, -1, self.img, (0, 0), (1920, 1080))

        self.pressed = False
        self.SetTitle("wxPython Test Application")
        self.ShowFullScreen(True)

    def OnPaint(self, e):
        dc = wx.PaintDC(self)

        if self.pressed:
            dc.DrawBitmap(self.img, 0, 0, True) 
        else:
            dc.SetBrush(wx.Brush(self.color))
            dc.DrawRectangle(0, 0, 1920, 1080)

    def OnClick(self, e):
        self.pressed = True
        #self.color = '#FFFFFF'
        e.Skip()
        self.Refresh()

    def OnRelease(self, e):
        self.pressed = False
        #self.color = '#000000'
        e.Skip()
        self.Refresh()

def main():
    app = wx.App()
    test_app = TestApp(None)
    test_app.Show()
    app.MainLoop()


if __name__ == '__main__':
    main()
